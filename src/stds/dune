(library
 (name stds)
 (libraries base core ptmap uutf sexplib fmt)
 (js_of_ocaml
  (flags
   (:include js-of-ocaml-flags-%{profile})))
 (preprocess
  (pps
   ppx_let
   ppx_sexp_conv
   ppx_deriving.ord
   ppx_deriving_hash
   ppx_deriving.show
   ppx_yojson_conv)))

(rule
 (write-file
  js-of-ocaml-flags-dev
  "(:standard --debug-info --no-inline --pretty --source-map)"))

(rule
 (write-file js-of-ocaml-flags-release "(:standard)"))
